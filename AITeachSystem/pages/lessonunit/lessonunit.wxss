/* pages/lessonunit/lessonunit.wxss */
.pre-tags{
  display: flex;
  flex-wrap:wrap;
}

.pre-tags-title{
  font-size: 32rpx;
  padding: 10rpx;
  margin: 4px 10px;
  color:black;
  font-weight: bold;
}

.pre-tags-item{
  font-size: 28rpx;
  padding: 10rpx;
  margin: 4px 4px;
  background: #f5f5f5;
  color:#353535;
  border-radius: 20rpx;
}

.unit-name{
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #1296db;
  font-weight: bold;
  display: flex;
  justify-content: space-between;
}

.unit-name text{
  margin-left:20rpx;
  color:#fff;
}

.unit-name navigator{
  margin-right:20rpx;
  color:#1bcf74;
}

.unitabstract{
  width: 100%;
  height: 220rpx;
  padding: 10rpx;
  background-color: ghostwhite;
  font-size: 36;
  line-height: 40rpx;
  border: 2rpx solid lightgray;
}

.video-and-quiz
{
  display: flex;
  justify-content: space-between;
  margin: 10rpx 0rpx;
}

.video-and-quiz txt{
  font-size: 32rpx;
  margin: 4px 10px;
  color:black;
  font-weight: bold;
  margin-left:20rpx;
}

.video-and-quiz navigator{
  margin-right:20rpx;
  color:#1bcf74;
  font-weight: bold;
}

.video-title{
  position:absolute;
  z-index:1; 
  color: #1296db; 
  margin-top:-450rpx;
}


