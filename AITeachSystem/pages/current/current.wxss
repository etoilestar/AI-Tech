/* pages/current/current.wxss */
.radio-view-t{
  width:100%;
  height:835rpx;
}

.radio-view-s{
  width:100%;
  height:912rpx;
}

.buttons-view{
  margin-top: 10rpx;
  width: 100%;
  box-sizing: border-box;
  display: flex;
  justify-content: space-evenly;
}

.fortopmargin{
  margin-top: 30rpx; 
  display: flex;
  justify-content: space-evenly;
}

.radio-group {
    margin-top: 20px;
    background-color: #fefefe;
}

.radio-group label {
    display: flex;
    justify-content: space-between;
    height: 86rpx;
    line-height: 86rpx;
    font-size: 32rpx;
    border-bottom: 1rpx solid #efefef;
    box-sizing: border-box;
    padding: 0 20rpx;
}

radio {
    width: 38rpx;
}

/* 单选框未选中 */
radio .wx-radio-input {
    width: 38rpx;
    height: 38rpx;
    border-radius: 50%;
}

/* 单选框选中后对勾样式 */
radio .wx-radio-input.wx-radio-input-checked::before{
    border-radius: 50%;
    width: 60rpx;
    height: 60rpx;
    line-height: 60rpx;
    text-align: center;
    font-size: 26rpx;   
    color:#fff;
    background-color: #1296db;
    border-color: #1296db;
}

.input-bar{
  text-align: center;
}


