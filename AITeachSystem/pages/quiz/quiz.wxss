/* pages/quiz/quiz.wxss */
.quizitems{
  width:100%;
  height:1080rpx;
}

.stem{
  height: 48rpx;
  line-height: 48rpx;
  text-align: left;
  padding: 0rpx 10rpx;
  background-color: #efefef;
  box-sizing: border-box;
  font-size: 28rpx;
  font-weight: bold;
}

.radio-group{
  display: flex;
  flex-direction: column;
}

.radio-group label {
  display: flex;
  justify-content: space-between;
  height: 48rpx;
  line-height: 48rpx;
  font-size: 28rpx;
  padding: 0 20rpx;
}

radio {
  width: 36rpx;
  margin-right: 20rpx;
}

/* 单选框未选中 */
radio .wx-radio-input {
    width: 36rpx;
    height: 36rpx;
    border-radius: 50%;
}

/* 单选框选中后对勾样式 */
radio .wx-radio-input.wx-radio-input-checked::before{
    border-radius: 50%;
    width: 56rpx;
    height: 56rpx;
    line-height: 48rpx;
    text-align: center;
    font-size: 36rpx;   
    color:#fff;
    background-color: #1296db;
    border-color: #1296db;
}

.checkbox-group{
  display: flex;
  flex-direction: column;
}

.checkbox-group label {
  display: flex;
  justify-content: space-between;
  height: 48rpx;
  line-height: 48rpx;
  font-size: 28rpx;
  padding: 0 20rpx;
}

checkbox .wx-checkbox-input{
    width:  36rpx;
    height: 36rpx;
}

checkbox .wx-checkbox-input.wx-checkbox-input-checked{
    border: 1rpx solid transparent;
    background-color: #1296db;
}

checkbox .wx-checkbox-input.wx-checkbox-input-checked::before{
  width: 36rpx;
  height: 36rpx;
  line-height: 36rpx;
  text-align: center;
  font-size:36rpx;
  color:#fff;
  background: transparent;
  transform: translate(-50%, -50%) scale(1);
  -webkit-transform: translate(-50%, -50%) scale(1);
}

.question-content
{
  width:100%;
  height: 240rpx;
  background-color:lightskyblue;
}

.controls{
  display: flex;
  justify-content: center;
}

.btn{
  margin-top:20rpx;
}