/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 

/* 一级页面标题样式 */
.title-box {
  width: 100%;
  height: 80rpx;
  padding: 10rpx;
  box-sizing: border-box;
  background-color: #1296db;
  border-radius: 4rpx;
  border-top:    4rpx solid #1296db;
  border-bottom: 4rpx solid #1296db;
  display:flex;
  align-items:center;
  justify-content:left;
  color:#fff;
  font-size: 36rpx;
}

/* 二级页面标题样式 */
.title{
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #1296db;
  font-weight: bold;
  display: flex;
  justify-content: space-between;
}

.title text{
  margin-left:20rpx;
  color:#fff;
}

.btn{
  display:inline-block;/*可以控制按钮独占一行还是行内元素建议用inline-block*/
  width:auto!important;/*控制按钮宽度important必备要不无法生效默认为184px*/
  margin-left:6rpx!important;/*按钮左外距离必须加important否则无效默认auto*/
  margin-right:6rpx!important;/*同上*/
  font-weight:normal;/*文字粗细默认为700*/  
  font-size: 10!important;
  color: #fff;
  background: #1296db;
  border-radius: 20rpx; 
}

.btn.button-hover{/*btn点击样式*/
  color:#1bcf74;
}